# ============================================================================
# PortalDTE - Archivo de Variables de Entorno
# ============================================================================
# Copiar este archivo a .env y configurar los valores
# NUNCA subir el archivo .env al repositorio
# ============================================================================

# Entorno de ejecucion (production, development, testing)
APP_ENV=production

# Modo debug (true/false) - NUNCA true en produccion
APP_DEBUG=false

# ============================================================================
# BASE DE DATOS POSTGRESQL
# ============================================================================
DB_HOST=10.30.1.194
DB_PORT=5432
DB_DATABASE=opendte
DB_USERNAME=opendte
DB_PASSWORD=CAMBIAR_PASSWORD_AQUI

# ============================================================================
# CONFIGURACION SII
# ============================================================================
# true = Ambiente de certificacion, false = Produccion
SII_CERTIFICACION=false

# Tasa de IVA
IVA_TASA=19

# ============================================================================
# RUTAS DEL SISTEMA
# ============================================================================
PATH_BATCH=/opt/opendte/bin/
PATH_BASE=/opt/opendte/
PATH_REAL_RAIZ=/opt/opendte/httpdocs/
PATH_CLIE_ELEC=/opt/opendte/httpdocs/clie_elec/

# ============================================================================
# URLs
# ============================================================================
# URL base del portal (con / al final)
APP_URL=https://portaldte.opendte.cl/

# URL del webservice
WS_URL=http://cloud-ws.opendte.cl:8080/

# ============================================================================
# SEGURIDAD
# ============================================================================
# Clave secreta para tokens (generar con: php -r "echo bin2hex(random_bytes(32));")
APP_SECRET_KEY=GENERAR_CLAVE_SECRETA_AQUI

# Tiempo de expiracion de sesion en segundos (default: 3600 = 1 hora)
SESSION_LIFETIME=3600

